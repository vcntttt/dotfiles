#!/bin/bash
confirm(){
    echo -e "Yes\nNo" | rofi -dmenu -p "Synchronize?"
}

case $1 in
    in)
      if [[ "$(confirm)" == "Yes" ]]; then
        rclone sync drive-uct:/ ~/uct-drive/
        notify-send "Synchronization completed: in"
      else
        notify-send "Synchronization cancelled: in"
      fi
      ;;
    out)
      if [[ "$(confirm)" == "Yes" ]]; then
        rclone sync ~/uct-drive/ drive-uct:/
        notify-send "Synchronization completed: out"
      else
        notify-send "Synchronization cancelled: out"
      fi
      ;;
    *)
      echo "Usage: $0 {in|out}"
      exit 1
      ;;
esac