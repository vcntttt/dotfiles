#! /bin/sh
# by ericmurphyxyz 
# https://github.com/ericmurphyxyz/dotfiles/blob/master/.local/bin/powermenu

chosen=$(printf "	Power Off\n	Reboot\n	Lock" | rofi -dmenu -p "")

case "$chosen" in
	"	Power Off") systemctl poweroff ;;
	"	Reboot") systemctl reboot ;;
	"	Lock") betterlockscreen -l ;;
	*) exit 1 ;;
esac
