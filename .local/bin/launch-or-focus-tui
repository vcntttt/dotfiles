#!/usr/bin/env bash
# Launch/focus a Ghostty TUI with stable class, always floating.

set -euo pipefail

if [[ $# -lt 1 ]]; then
  echo "Usage: launch-or-focus-tui <command> [args...]"
  exit 1
fi

APP_ID="org.user.$(basename "$1")"

exec launch-or-focus-float \
  "$APP_ID" \
  ghostty --class="$APP_ID" -e "$1" "${@:2}"
